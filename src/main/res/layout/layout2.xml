<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/mainimg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#EAEAEA"
                android:gravity="center"
                android:text="식당 메인 이미지(총 3장)" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="30dp"
                android:text="+" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="#111" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
            android:id="@+id/menuup"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="#EAEAEA"
            android:gravity="center"
            android:text="메뉴 업로드" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/R1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/mainmenuimg1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#EAEAEA"
                    android:gravity="center"
                    android:text="식당 메인 이미지(1장)" />

                <Button
                    android:id="@+id/menu_upload_btn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/mainmenuimg1"
                    android:text="+" />

                <EditText
                    android:id="@+id/menu_name1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/mainmenuimg1"
                    android:hint="메뉴명"
                    android:inputType="text|textNoSuggestions"
                    android:lines="1" />

                <EditText
                    android:id="@+id/menu_price1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/menu_name1"
                    android:hint="가격"
                    android:inputType="text|textNoSuggestions"
                    android:lines="1" />

                <EditText
                    android:id="@+id/menu_discount1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/menu_price1"
                    android:hint="할인 가격"
                    android:inputType="text|textNoSuggestions"
                    android:lines="1" />

            </RelativeLayout>
        </LinearLayout>

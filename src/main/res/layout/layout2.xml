                    android:id="@+id/submit_btn"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/license"
                    android:gravity="center"
                    android:text="제출하기" />

            </LinearLayout>
    </LinearLayout>

</ScrollView>

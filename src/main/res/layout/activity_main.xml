<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hana.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="#e6cbb3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#111"
                android:layout_gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/Id_Img"
                android:layout_margin="10dp"
                android:background="#111"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/Id_Input"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/Id_Img" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#111"
                android:id="@+id/Pw_Img"
                android:layout_below="@id/Id_Input" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:id="@+id/Pw_Input"
                android:inputType="textPassword"
                android:background="#ffffff"
                android:layout_toRightOf="@id/Pw_Img"
                android:layout_below="@id/Id_Input" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#111"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/login_btn"
                android:onClick="loginonClick"
                android:text="로그인"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#EAEAEA"
                android:gravity="center"
                android:id="@+id/auto_login"
                android:text="자동 로그인"
                android:layout_below="@id/login_btn" />

            <CheckBox
                android:id="@+id/auto_login_cb"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:checked="true"
                android:layout_toRightOf="@id/auto_login"
                android:layout_below="@id/login_btn"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/member_btn"
                android:text="회원가입"
                android:layout_below="@id/auto_login" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAEAEA"
                android:text="footer에 들어갈 내용들 (간단한 회사 소개 등등)"/>

        </LinearLayout>

        <Button
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/btn"
            android:text="mypage" />

        <Button
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/btn2"
            android:text="test" />

    </LinearLayout>

</RelativeLayout>